{
	"name": "simplyteam-front",
	"version": "0.0.1",
	"private": true,
	"lint-staged": {
		"src/**/*.{js,ts,css,scss,md,json}": [
			"prettier --plugin-search-dir . --write",
			"git add"
		],
		"src/**/*.{svelte,html}": [
			"prettier --plugin-search-dir . --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && pretty-quick --staged"
		}
	},
	"scripts": {
		"dev": "vite dev --port 3000 --host",
		"start:test": "vite dev --port 3001 --host --mode testing",
		"build": "vite build",
		"test:e2e": "cypress open",
		"preview": "vite preview",
		"prepare": "husky install",
		"check-types": "tsc --pretty --noEmit",
		"check-format": "prettier --check .",
		"check-lint": "eslint . --ext ts --ext svelte --ext tsx --ext js",
		"test-all": "pnpm run check-format && pnpm run check-lint && npm run check-types && pnpm run build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.1",
		"@commitlint/config-conventional": "^17.6.1",
		"@cypress-audit/lighthouse": "^1.4.2",
		"@faker-js/faker": "^8.0.2",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-node": "^1.2.3",
		"@sveltejs/kit": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"axios-mock-adapter": "^1.21.4",
		"cypress": "^12.12.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"i": "^0.3.7",
		"lint-staged": "^13.2.0",
		"postcss": "^8.4.24",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"pretty-quick": "^3.1.3",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"sveltekit-autoimport": "^1.6.10",
		"tailwindcss": "^3.2.6",
		"tslib": "^2.4.1",
		"typescript": "^5.1.3",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.3.0",
		"@fortawesome/free-solid-svg-icons": "^6.3.0",
		"@lhci/cli": "0.12.x",
		"axios": "^1.3.4",
		"classnames": "^2.3.2",
		"daisyui": "^3.1.5",
		"install": "^0.13.0",
		"lottie-web": "^5.12.0",
		"sass": "^1.58.1",
		"svelecte": "^3.15.3",
		"svelte-fa": "^3.0.3"
	}
}
